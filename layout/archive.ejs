<!--
	This is the archive page. 
	It will display a list of all the posts on our site

	@link https://hexo.io/docs/templates.html

	Included via layout.ejs

	Includes & loops thru _partials/content-archive.ejs with local var item: item
	Includes _partials/pagination.ejs
-->

<%
	var title = '';
    if (page.category) title = page.category;
    if (page.tag) title = page.tag;
    if (page.archive){
        if (page.year) title = page.year + (page.month ? '/' + page.month : '');
        else title = "Archives";
    }
%>

<article class="ph4">
	<% if(title) { %>
		<h2><%- title %></h2>
	<% } %>

	<% page.posts.each(function(item){ %>

		<%- partial('_partials/content-archive', {item: item}) %>

	<% }); %>

	<%- partial('_partials/pagination') %>
</article>